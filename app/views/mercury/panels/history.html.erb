<div class="mercury-history-panel">
    <div class="filter">
      <input class="filter focusable" type="text">
    </div>
    <% Mercury::History.all.each do |history| %>
        <div class="history" data-filter="<%= history.user.username %> <%= history.page.name.humanize %> <%= history.updated_at %>">
            <hr style="clear: both; margin: 10px 0;" />
            <span style="padding-left: 5px;"><a href="/<%= history.page.name %>"><%= history.page.name.humanize %></a> updated by <b><%= history.user.username %></b><span style="font-size: 9px;"> - <%= time_ago_in_words(history.updated_at) %> ago</span></span>
        </div>
    <% end %>
</div>